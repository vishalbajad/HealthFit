@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model SignupModel
@{
    ViewData["Title"] = "Home page";
    Layout = "Layouts/_Form_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <h2 class="login_box">Sign Up</h2>
        <table style="vertical-align: top;">
            <tr>
                <td colspan="2" style="vertical-align: top;">
                    <div class="form-group">
                        <div class="radio-group">
                            <input type="radio" id="rbtnpublisher" name="UserDetails.UserDetails.UserType" value="@((int)Object_Provider.Enum.UserType.Publisher)" />
                            <label for="rbtnpublisher">Publisher</label>

                            <input type="radio" id="rbtnpublicuser" name="UserDetails.UserDetails.UserType" value="@((int)Object_Provider.Enum.UserType.PublicUser)" checked="checked" />
                            <label for="rbtnpublicuser">Public User</label>
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td style="max-width:48%;vertical-align: top;">
                    <div class="form-group">
                        <label asp-for="UserDetails.UserDetails.FullName"></label>
                        <input asp-for="UserDetails.UserDetails.FullName" class="txtOnly" placeholder="Enter your full name" required maxlength="50" />
                        <span asp-validation-for="UserDetails.UserDetails.FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserDetails.UserDetails.PhoneNo"></label>
                        <input asp-for="UserDetails.UserDetails.PhoneNo" placeholder="Enter your PhoneNo" maxlength="12" />
                        <span asp-validation-for="UserDetails.UserDetails.PhoneNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserDetails.UserDetails.Address"></label>
                        <input asp-for="UserDetails.UserDetails.Address" placeholder="Enter your address" maxlength="100" />
                        <span asp-validation-for="UserDetails.UserDetails.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserDetails.UserDetails.City"></label>
                        <input asp-for="UserDetails.UserDetails.City" class="txtOnly" placeholder="Enter your city" maxlength="50" />
                        <span asp-validation-for="UserDetails.UserDetails.City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserDetails.UserDetails.State"></label>
                        <input asp-for="UserDetails.UserDetails.State" class="txtOnly" placeholder="Enter your State" maxlength="50" />
                        <span asp-validation-for="UserDetails.UserDetails.State" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserDetails.UserDetails.Country"></label>
                        <input asp-for="UserDetails.UserDetails.Country" class="txtOnly" placeholder="Enter your Country" maxlength="50" />
                        <span asp-validation-for="UserDetails.UserDetails.Country" class="text-danger"></span>
                    </div>
                </td>
                <td style="max-width:48%;vertical-align: top;">
                    <div class="form-group">
                        <label asp-for="UserDetails.UserDetails.Email"></label>
                        <input asp-for="UserDetails.UserDetails.Email" placeholder="Enter your email" required maxlength="100" />
                        <span asp-validation-for="UserDetails.UserDetails.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserDetails.UserDetails.Website"></label>
                        <input asp-for="UserDetails.UserDetails.Website" placeholder="Enter your Website" maxlength="100" />
                        <span asp-validation-for="UserDetails.UserDetails.Website" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserDetails.UserDetails.UserName"></label>
                        <input asp-for="UserDetails.UserDetails.UserName" placeholder="Enter your UserName" class="txtOnly" maxlength="30" required />
                        <span asp-validation-for="UserDetails.UserDetails.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserDetails.Password"></label>
                        <input asp-for="UserDetails.Password" placeholder="Enter your Password" maxlength="30" required />
                        <span asp-validation-for="UserDetails.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserDetails.ConfirmPassword"></label>
                        <input asp-for="UserDetails.ConfirmPassword" placeholder="Enter your Password" maxlength="30" required />
                        <span asp-validation-for="UserDetails.ConfirmPassword" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <button type="submit" class="green" name="submit" formmethod="post"> Sign Up</button> <button id="btnClancel" type="button" class="cancel" onclick="location.href ='/Login'">Cancel</button>
                    </div>
                </td>
                <td></td>
            </tr>
        </table>
    </div>
    @if (!string.IsNullOrWhiteSpace(Model.responseMessage))
    {
        <div class="message @Model.responseCode">
            <span class="icon"></span>
            <span class="text">@Model.responseMessage</span>
        </div>
        <script>
            $(document).ready(function () {
                setTimeout(function () { $("#btnClancel").click(); }, 2000);
            });
        </script>
    }
    <script>
        $(document).ready(function () {
            $(".txtOnly").keypress(function (e) {
                var key = e.keyCode;
                if (key >= 48 && key <= 57) {
                    e.preventDefault();
                }
            });
        });
    </script>
}