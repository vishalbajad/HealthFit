@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model SignupModel
@{
    ViewData["Title"] = "Home page";
    Layout = "_Form_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <div class="container" style="margin-left: 21%;width: 50%;">
        <h2 class="login_box">Sign Up</h2>
        <div class="form-group">
            <label for="fullname">Full Name</label>
            <input type="text" id="txtfullname" name="UserDetails.UserDetails.FullName" placeholder="Enter your full name" required />
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" name="UserDetails.UserDetails.Address" id="txtaddress" placeholder="Enter your address" required />
        </div>
        <div class="form-group">
            <label for="city">City</label>
            <input type="text" id="txtcity" name="UserDetails.UserDetails.City" placeholder="Enter your city" required />
        </div>
        <div class="form-group">
            <label for="state">State</label>
            <input type="text" id="txtstate" name="UserDetails.UserDetails.State" placeholder="Enter your state" required />
        </div>
        <div class="form-group">
            <label for="country">Country</label>
            <input type="text" id="txtcountry" name="UserDetails.UserDetails.Country" placeholder="Enter your country" required />
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="txtemail" name="UserDetails.UserDetails.Email" placeholder="Enter your email" required />
        </div>
        <div class="form-group">
            <label for="phoneno">Phone No</label>
            <input type="text" id="txtphoneno" name="UserDetails.UserDetails.PhoneNo" placeholder="Enter your phone no" required />
        </div>
        <div class="form-group">
            <label for="website">Website/Social</label>
            <input type="text" id="txtwebsite" name="UserDetails.UserDetails.Website" placeholder="Enter your details" />
        </div>
        <div class="form-group">
            <div class="radio-group">
                <input type="radio" id="rbtnpublisher" name="UserDetails.UserDetails.UserType" value="2" />
                <label for="rbtnpublisher">Publisher</label>

                <input type="radio" id="rbtnpublicuser" name="UserDetails.UserDetails.UserType" value="1" />
                <label for="rbtnpublicuser">Public User</label>
            </div>
        </div>
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="txtusername" name="UserDetails.UserDetails.UserName" placeholder="Enter your username" required />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="txtpassword" name="UserDetails.Password" placeholder="Enter your password" required />
        </div>
        <div class="form-group">
            <label for="confirm-password">Confirm Password</label>
            <input type="password" id="txtconfirmpassword" name="UserDetails.ConfirmPassword" placeholder="Confirm your password" required />
        </div>
        <div class="form-group">
            <button type="submit" class="green" name="submit" formmethod="post"> Sign Up</button> <button type="button" class="cancel" onclick="location.href ='/index'">Cancel</button>
        </div>
        <div class="form-group">
            <br />
        </div>
    </div>
    @if (!string.IsNullOrWhiteSpace(Model.responseMessage))
    {
        <div class="message @Model.responseCode">
            <span class="icon"></span>
            <span class="text">@Model.responseMessage</span>
        </div>
    }
}