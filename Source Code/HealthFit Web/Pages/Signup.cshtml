@page
@model SignupModel
@{
    ViewData["Title"] = "Home page";
    Layout = "_Form_Layout.cshtml";
}
<div class="container" style="margin-left: 21%;width: 50%;">
    <h2 class="login_box">Sign Up</h2>
    <form>
        <div class="form-group">
            <label for="fullname">Full Name</label>
            <input type="text" id="fullname" placeholder="Enter your full name" required>
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" id="address" placeholder="Enter your address" required>
        </div>
        <div class="form-group">
            <label for="city">City</label>
            <input type="text" id="city" placeholder="Enter your city" required>
        </div>
        <div class="form-group">
            <label for="state">State</label>
            <input type="text" id="state" placeholder="Enter your state" required>
        </div>
        <div class="form-group">
            <label for="country">Country</label>
            <input type="text" id="country" placeholder="Enter your country" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" id="email" placeholder="Enter your email" required>
        </div>
        <div class="form-group">
            <label for="phoneno">Phone No</label>
            <input type="text" id="phoneno" placeholder="Enter your phone no" required>
        </div>
        <div class="form-group">
            <label for="website">Website/Social</label>
            <input type="text" id="website" placeholder="Enter your details">
        </div>
        <div class="form-group">
            <div class="radio-group">
                <input type="radio" id="rbtnpublisher" name="options">
                <label for="rbtnpublisher">Publisher</label>

                <input type="radio" id="rbtnpublicuser" name="options">
                <label for="rbtnpublicuser">Public User</label>
            </div>
        </div>
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" placeholder="Enter your username" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" placeholder="Enter your password" required>
        </div>
        <div class="form-group">
            <label for="confirm-password">Confirm Password</label>
            <input type="password" id="confirm-password" placeholder="Confirm your password" required>
        </div>
        <div class="form-group">
            <button type="submit" class="green">Sign Up</button> <button type="button" class="cancel" onclick="location.href ='/index'">Cancel</button>
        </div>
        <div class="form-group">
            <br />
        </div>
    </form>
</div>
