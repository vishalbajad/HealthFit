@page
@model LoginModel
@{
    ViewData["Title"] = "Home page";
    Layout = "Layouts/_Form_Layout.cshtml";
}
<form method="post">
    @Html.AntiForgeryToken()
    <div class="container" style="margin-left: 24%;width: 50%;">
        <h2 class="login_box">Login</h2>
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="UserDetails.UserDetails.UserName" placeholder="Enter your username" required maxlength="30">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="UserDetails.Password" placeholder="Enter your password" required maxlength="30">
        </div>
        <div class="form-group">
            <button type="submit" class="green">Login</button> <button type="button" class="cancel" onclick="location.href ='/index'">Cancel</button>
        </div>
        <div class="form-group">
            <br />
        </div>

    </div>
</form>
