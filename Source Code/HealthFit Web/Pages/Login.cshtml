@page
@model LoginModel
@{
    ViewData["Title"] = "Home page";
    Layout = "Layouts/_Form_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container" style="margin-left: 30%;width: 30%">
        <h2 class="login_box">Login</h2>
        <div class="form-group">
            <label asp-for="UserDetails.UserDetails.UserName"></label><span class="mandatoryfield">*</span>
            <input asp-for="UserDetails.UserDetails.UserName" placeholder="Enter your UserName" maxlength="30" />
            <span asp-validation-for="UserDetails.UserDetails.UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserDetails.Password"></label><span class="mandatoryfield">*</span>
            <input asp-for="UserDetails.Password" placeholder="Enter your Password" maxlength="30" required />
            <span asp-validation-for="UserDetails.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="green">Login</button> <button type="button" class="cancel" onclick="location.href ='/index'">Cancel</button>
        </div>
        <div class="form-group">
            <br />
        </div>
    </div>
    @if (!string.IsNullOrWhiteSpace(Model.responseMessage))
    {
        <div class="message @Model.responseCode">
            <span class="icon"></span>
            <span class="text">@Model.responseMessage</span>
        </div>
    }
}
