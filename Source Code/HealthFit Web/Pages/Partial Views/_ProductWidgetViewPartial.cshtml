@using HealthFit.Object_Provider.Model;
@model Journal
<div class="product">
    <a href="#" class="info">
        <span class="holder">
            <img src="images/image01.jpg" alt="" />
            <span class="book-name">@Model.Title</span>
            <span class="author">@Model.ISSN</span>
            <span class="description"> 
                @if (Model.Description.Length < 30)
                {
                    @Model.Description
                }
                else
                {
                    @(Model.Description.Substring(0, 30) + " more..")
                }
            </span>
        </span>
    </a>
    <a href="#" class="buy-btn">SUBSCRIBE<span class="price"><span class="low">$</span>@Model.Price</span></a>
</div>

